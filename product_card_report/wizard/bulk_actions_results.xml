<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bulk_message_wizard_form" model="ir.ui.view">
        <field name="name">bulk.message.wizard.form</field>
        <field name="model">bulk.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    <field name="message"/>
                </p>
                <footer>
                    <button name="action_close" string="Close" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
